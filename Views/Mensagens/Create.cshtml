@model Mensagem

@if (ViewData["MensagemEnviada"] != null && (bool)ViewData["MensagemEnviada"])
{
    <div class="alert alert-success" role="alert">
        Mensagem enviada com sucesso!
    </div>
}

<form asp-controller="Home" asp-action="EnviarMensagem" method="post">
    <div class="form-group">
        <label asp-for="Conteudo">Mensagem:</label>
        <input asp-for="Conteudo" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Enviar Mensagem</button>
</form>

