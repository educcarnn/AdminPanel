@model AdminPanel.Models.ViewModels.MessageFormViewModel

@{
    ViewData["Title"] = "Criar";
}

<h2>@ViewData["Title"]</h2>

<h4>Criar nova mensagem</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-group">
                <label asp-for="Message.Name" class="control-label"></label>
                <input asp-for="Message.Name" class="form-control" />
                <span asp-validation-for="Message.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Message.Email" class="control-label"></label>
                <input asp-for="Message.Email" class="form-control" />
                <span asp-validation-for="Message.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Message.Mensagem" class="control-label"></label>
                <input asp-for="Message.Mensagem" class="form-control" />
                <span asp-validation-for="Message.Mensagem" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Message.TipoId" class="control-label"></label>
                <select asp-for="Message.TipoId" asp-items="@(new SelectList(Model.Tipos,"Id", "Name"))" class="form-control"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-success" />
                <a asp-action="Index">Voltar</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}